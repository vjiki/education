<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="ru.evilorange.default-unit">

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:6432/orion_test"/>
            <property name="hibernate.connection.username" value="user_name"/>
            <property name="hibernate.connection.password" value="your_password"/>

            <property name="hibernate.show_sql" value="true"/>


            <!--<property name="hibernate.format_sql" value="true"/>-->
        <!--    <property name="hibernate.use_sql_comments" value="true"/>-->

        </properties>
    </persistence-unit>
</persistence>